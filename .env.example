# Against Wind - Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/against_wind

# Redis Configuration
REDIS_URL=redis://localhost:6379

# S3/MinIO Storage Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=gpx-files

# API Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Weather APIs
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1
MET_OFFICE_API_KEY=your-met-office-api-key
OPENWEATHER_API_KEY=your-openweather-api-key

# Application Settings
DEBUG=true
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Wind Analysis Configuration
DEFAULT_SAMPLE_DISTANCE_KM=1.0
DEFAULT_TIME_RESOLUTION_MINUTES=15
DEFAULT_RIDER_HEIGHT_M=1.5
MAX_ROUTE_LENGTH_KM=500.0
MAX_CONCURRENT_FORECASTS=10
FORECAST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=7200

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here
